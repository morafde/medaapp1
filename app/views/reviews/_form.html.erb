<%= form_for([@hospital, @review]) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h4>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="star-rating"></div>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: "form-control", placeholder: "Here are a few ideas on what to write about: How was the ambience, how neat was the environment, how friendy were the staff, was there a pharmacy, how knowledgeable was the Doctor/physician? " %>

  </div>



  <div class="form-group">
     <h5>I certify that this review is based on my own experience and is my genuine opinion of this Hospital,<h5
     <h5>I understand that Medapp has a zero-tolerance policy on fake reviews and consent by clicking on "Create Review" below.</h5>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
  $('#star-rating').raty({
    path: 'https://s3-us-west-2.amazonaws.com/morafamedapp/stars',
    scoreName: 'review[rating]'
  });
</script>
