<%= form_for(hospital, :html => { multipart: true }) do |f| %>
  <% if hospital.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(hospital.errors.count, "error") %> prohibited this hospital from being saved:</h4>

      <ul>
      <% hospital.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "The Healing Room" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control", placeholder: "36, ebinpejo lane, Lagos, Nigeria" %>
  </div>

  <div class="form-group">
    <%= f.label :city_town %><br>
    <%= f.select :city_town, [ 'Ikeja','Lekki','VI' ], :prompt => 'Select One' %>
  <div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.select :state, [ 'Lagos'], :prompt => 'Select One' %>
  <div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control", placeholder: "012773000 or 08099999999" %>
  </div>
  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_field :website, class: "form-control", placeholder:"https://thisihowtodoit.com/" %>
  </div>

  <div class="form-group">
    <%= f.label :safe_care %><br>
    <%= f.select :safe_care, [ 'No','Yes',], :prompt => 'Select One' %>
  <div>
  <div class="form-group">
    <%= f.label :jci %><br>
    <%= f.select :jci, [ 'No','Yes',], :prompt => 'Select One' %>
  <div>
  <div class="form-group">
    <%= f.label :cohsasa %><br>
    <%= f.select :cohsasa, [ 'No','Yes',], :prompt => 'Select One' %>
  <div>
  <div class="form-group">
    <%= f.label :best_known_4 %><br>
    <%= f.select :best_known_4, [ 'Maternity','Emergency Response', 'Surgery', 'Eye Care'], :prompt => 'Select One' %>
  <div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

<div class="form-group">
  <%= form_tag root_path, multipart: true do %>
  <%= file_field_tag :file, class: "form-control" %>
  <%= submit_tag "Import CSV" %>
  <div/
<% end %>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
