<h1>Hospitals</h1>

<% content_for(:body_attributes) do %>
    data-no-turbolink="false"
  <% end %>



<table class="table table-bordered table-hover sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City/Town</th>
      <th>State</th>
      <th>Phone</th>
      <th>Website</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= link_to hospital.name, hospital %><br>
          <%= link_to image_tag(hospital.image), hospital %></td>
        </td> 

        <td><%= hospital.address %></td>
        <td><%= hospital.city_town %></td>
        <td><%= hospital.state %></td>
        <td><%= hospital.phone %></td>
        <td><%= link_to hospital.website, hospital.website, target: :_blank %></td>
        <% if user_signed_in? && current_user.admin? %>
         <td><%= link_to 'Edit', edit_hospital_path(hospital), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Hospital', new_hospital_path, class: "btn btn-link" %>
<% end %>

